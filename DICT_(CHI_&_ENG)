<body>

<div class="header">
    <h1>üìñ Spelling Assistant</h1>
</div>

<div class="container">

    <!-- Input Section -->
    <div class="card">
        <div class="input-wrapper">
            <textarea id="wordListInput" class="word-list-input" placeholder="Enter your words here...">beautiful
The quick brown fox jumps over the lazy dog, and rests.
She sells seashells by the seashore, waiting for the tide.</textarea>
            
            <!-- The Curtain to hide answers -->
            <div id="answerCurtain" class="curtain">
                <div class="curtain-icon">üôà</div>
                <div class="curtain-text">Spelling in Progress...</div>
                <button class="curtain-btn" onclick="toggleCurtain(false)">üëÅÔ∏è Peek Answers</button>
            </div>
        </div>

        <div class="tools-bar">
            <label class="tool-btn">
                üìÅ Upload File
                <input type="file" id="fileInput" accept=".txt">
            </label>
            <label class="tool-btn">
                üì∏ Camera / OCR
                <input type="file" id="cameraInput" accept="image/*" capture="environment">
            </label>
            <button class="tool-btn" onclick="clearInput()" style="margin-left: auto;">üóëÔ∏è Clear</button>
        </div>
    </div>

    <!-- Controls Section -->
    <div class="card control-panel">
        <div class="status-bar">
            <div class="counter" id="counterDisplay">0 / 0</div>
            <div class="status-msg" id="statusMessage">Ready to start</div>
        </div>

        <div class="main-controls">
            <button class="ctrl-btn" id="prevBtn" onclick="prevItem()" disabled>
                <span class="icon">‚èÆÔ∏è</span>
                <span>Prev</span>
            </button>
            
            <!-- This button toggles between Repeat and Stop -->
            <button class="ctrl-btn btn-play" id="centerBtn" onclick="handleCenterButton()" disabled>
                <span class="icon">‚ñ∂Ô∏è</span>
                <span>Play</span>
            </button>

            <button class="ctrl-btn" id="nextBtn" onclick="nextItem()" disabled>
                <span class="icon">‚è≠Ô∏è</span>
                <span>Next</span>
            </button>
        </div>

        <div class="settings-row">
            <div class="setting-group">
                <span style="font-size:0.85rem; color:var(--text-secondary)">Speed:</span>
                <button class="toggle-btn" onclick="setSpeed(0.75)" id="speedBtn075">0.75x</button>
                <button class="toggle-btn active" onclick="setSpeed(1)" id="speedBtn1">1.0x</button>
            </div>
            
            <div class="setting-group">
                <button class="toggle-btn" onclick="toggleWordByWord()" id="wbwBtn">
                    üìù Word by Word
                </button>
            </div>

            <div class="setting-group">
                <button class="toggle-btn" onclick="toggleOrder()" id="randomBtn">
                    üîÄ Random
                </button>
            </div>
        </div>

        <button class="start-overlay-btn" id="startBtn" onclick="initiateSession()">
            üöÄ Start Spelling
        </button>
    </div>

</div>

<!-- Loading Modal -->
<div class="modal-overlay" id="loadingModal">
    <div class="modal-content">
        <h3>Preparing Audio</h3>
        <p style="margin-top:0.5rem; color:var(--text-secondary)" id="loadingText">Generating audio for all words...</p>
        <div class="progress-bar">
            <div class="progress-fill" id="progressFill"></div>
        </div>
        <p style="font-size:0.8rem; color:var(--text-secondary)">Please wait, this ensures smooth playback.</p>
    </div>
</div>

<script>
    // --- State Management ---
    let words = [];
    let currentIndex = 0;
    let isPlaying = false;
    let playbackSpeed = 1.0;
    let isWordByWord = false;
    let isRandom = false;
    let audioCache = {}; // Format: "index_type" -> Blob URL
    let currentAudioObj = null;
    let isSessionActive = false;

    // --- DOM Elements ---
    const inputEl = document.getElementById('wordListInput');
    const curtainEl = document.getElementById('answerCurtain');
    const centerBtn = document.getElementById('centerBtn');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const startBtn = document.getElementById('startBtn');
    const statusMsg = document.getElementById('statusMessage');
    const counterDisplay = document.getElementById('counterDisplay');
    const loadingModal = document.getElementById('loadingModal');
    const progressFill = document.getElementById('progressFill');
    const loadingText = document.getElementById('loadingText');

    // --- Input Logic ---
    let isInputVirgin = true;
    inputEl.addEventListener('focus', () => {
        if (isInputVirgin) {
            inputEl.value = '';
            isInputVirgin = false;
        }
    });

    function clearInput() {
        inputEl.value = '';
        inputEl.focus();
    }

    function toggleCurtain(forceState) {
        if (typeof forceState === 'boolean') {
            forceState ? curtainEl.classList.add('active') : curtainEl.classList.remove('active');
        } else {
            curtainEl.classList.toggle('active');
        }
    }

    // --- Text Processing ---
    function parseInput() {
        const raw = inputEl.value;
        let list = raw.split('\n').map(line => line.trim()).filter(line => line.length > 0);
        
        if (isRandom) {
            // Store original index to keep cache keys consistent if we wanted, 
            // but simpler to just shuffle the text array for this session.
            // Note: If we shuffle, we need to be careful about cache keys.
            // Strategy: We will generate audio based on CONTENT, not index.
            list = list.sort(() => Math.random() - 0.5);
        }
        return list;
    }

    function getCleanText(text) {
        // Remove leading numbers like "1. " or "(1) "
        return text.replace(/^[\d\(\)\.\s]+/, '');
    }

    function textToSpeakNormal(text) {
        let clean = getCleanText(text);
        // Ensure punctuation is read out for sentences
        return clean
            .replace(/\./g, ' full stop.')
            .replace(/,/g, ' comma,')
            .replace(/\?/g, ' question mark.')
            .replace(/!/g, ' exclamation mark.');
    }

    function textToSpeakSlow(text) {
        let clean = getCleanText(text);
        // Add pauses and explicit punctuation
        let processed = clean
            .replace(/,/g, ' comma ')
            .replace(/\./g, ' full stop ')
            .replace(/\?/g, ' question mark ')
            .replace(/!/g, ' exclamation mark ');
        
        // Add breaks between words
        return processed.split(' ').join('. '); 
    }

    // --- Preloading Logic (The Core Fix) ---
    async function initiateSession() {
        words = parseInput();
        if (words.length === 0) {
            alert("Please enter some words first!");
            return;
        }

        // UI Setup
        startBtn.style.display = 'none';
        toggleCurtain(true);
        loadingModal.classList.add('active');
        isSessionActive = true;
        currentIndex = 0;
        
        // Reset Cache for this session (or keep it if we want to be smart, but let's clear for safety)
        // Actually, keeping cache based on text content is better.
        
        // Start Batch Loading
        await preloadAllAudio();
        
        // Finished Loading
        loadingModal.classList.remove('active');
        enableControls();
        updateDisplay();
        
        // Auto Start
        playCurrentItem();
    }

    async function preloadAllAudio() {
        const totalTasks = words.length * 2; // Normal + Slow for each
        let completedTasks = 0;

        const updateProgress = () => {
            completedTasks++;
            const pct = Math.floor((completedTasks / totalTasks) * 100);
            progressFill.style.width = `${pct}%`;
            loadingText.textContent = `Generating audio... ${completedTasks}/${totalTasks}`;
        };

        // We process sequentially to avoid rate limits, or in small batches.
        // Since we are using Poe via window.Poe, we have to be careful.
        // If Poe is not available, we mock it (for testing UI).

        if (!window.Poe) {
            console.warn("Poe API not found. Using mock audio.");
        }

        for (let i = 0; i < words.length; i++) {
            const word = words[i];
            
            // 1. Load Normal
            await fetchAudio(word, 'normal');
            updateProgress();

            // 2. Load Slow
            await fetchAudio(word, 'slow');
            updateProgress();
        }
    }

    function getCacheKey(text, type) {
        return btoa(unescape(encodeURIComponent(text + '_' + type))); // Simple base64 hash
    }

    async function fetchAudio(text, type) {
        const key = getCacheKey(text, type);
        if (audioCache[key]) return; // Already cached

        const speakText = type === 'normal' ? textToSpeakNormal(text) : textToSpeakSlow(text);
        
        // Mock implementation for demo (Remove this block and uncomment Poe block for production)
        /*
        return new Promise(resolve => {
            setTimeout(() => {
                audioCache[key] = "https://actions.google.com/sounds/v1/alarms/beep_short.ogg"; // Mock URL
                resolve();
            }, 300);
        });
        */

        // Real Poe Implementation
        if (window.Poe && window.Poe.sendUserMessage) {
             return new Promise((resolve) => {
                const handlerName = `audio-${key}-${Date.now()}`;
                
                window.Poe.registerHandler(handlerName, (result) => {
                    if (result.responses[0].status === "complete") {
                        if (result.responses[0].attachments && result.responses[0].attachments.length > 0) {
                            audioCache[key] = result.responses[0].attachments[0].url;
                        }
                        resolve();
                    } else if (result.responses[0].status === "error") {
                        console.error("Audio gen error");
                        resolve(); // Resolve anyway to continue
                    }
                });

                window.Poe.sendUserMessage(
                    `@ElevenLabs-v2.5-Turbo ${speakText} --voice Lily`, 
                    { handler: handlerName, openChat: false }
                ).catch(() => resolve());
            });
        } else {
            // Fallback if no Poe and no Mock (just to prevent crash)
            console.log(`Simulating load for: ${speakText}`);
            return new Promise(r => setTimeout(r, 100));
        }
    }

    // --- Playback Engine ---
    function playCurrentItem() {
        stopAudio(); // Ensure clean slate

        const word = words[currentIndex];
        const type = isWordByWord ? 'slow' : 'normal';
        const key = getCacheKey(word, type);
        const url = audioCache[key];

        if (!url) {
            statusMsg.textContent = "Audio unavailable";
            setPlayButtonState('play');
            return;
        }

        currentAudioObj = new Audio(url);
        currentAudioObj.playbackRate = isWordByWord ? 1.0 : playbackSpeed; // Usually slow mode has its own pacing
        
        currentAudioObj.onended = () => {
            isPlaying = false;
            setPlayButtonState('repeat'); // Finished playing, ready to repeat
            statusMsg.textContent = "Waiting...";
        };

        currentAudioObj.onerror = () => {
            isPlaying = false;
            statusMsg.textContent = "Error playing";
            setPlayButtonState('play');
        };

        // Start Playing
        currentAudioObj.play().then(() => {
            isPlaying = true;
            setPlayButtonState('stop');
            statusMsg.textContent = isWordByWord ? "Playing (Word by Word)..." : "Playing...";
        }).catch(e => {
            console.error(e);
            isPlaying = false;
            setPlayButtonState('play');
        });
    }

    function stopAudio() {
        if (currentAudioObj) {
            currentAudioObj.pause();
            currentAudioObj.currentTime = 0;
        }
        isPlaying = false;
    }

    // --- Controls Logic ---
    function handleCenterButton() {
        if (isPlaying) {
            // Action: STOP
            stopAudio();
            setPlayButtonState('repeat'); // User stopped it manually
            statusMsg.textContent = "Stopped";
        } else {
            // Action: REPEAT / PLAY
            playCurrentItem();
        }
    }

    function nextItem() {
        if (currentIndex < words.length - 1) {
            currentIndex++;
            updateDisplay();
            playCurrentItem(); // Auto play next
        }
    }

    function prevItem() {
        if (currentIndex > 0) {
            currentIndex--;
            updateDisplay();
            playCurrentItem(); // Auto play prev
        }
    }

    function setPlayButtonState(state) {
        // state: 'play' (initial), 'stop' (playing), 'repeat' (ended/stopped)
        const icon = centerBtn.querySelector('.icon');
        const text = centerBtn.querySelector('span:nth-child(2)');
        
        centerBtn.classList.remove('stop-mode');

        if (state === 'stop') {
            icon.textContent = '‚èπ';
            text.textContent = 'Stop';
            centerBtn.classList.add('stop-mode');
        } else if (state === 'repeat') {
            icon.textContent = 'üîÅ';
            text.textContent = 'Repeat';
        } else {
            icon.textContent = '‚ñ∂Ô∏è';
            text.textContent = 'Play';
        }
    }

    function updateDisplay() {
        counterDisplay.textContent = `${currentIndex + 1} / ${words.length}`;
        prevBtn.disabled = currentIndex === 0;
        nextBtn.disabled = currentIndex === words.length - 1;
    }

    function enableControls() {
        centerBtn.disabled = false;
        prevBtn.disabled = false;
        nextBtn.disabled = false;
    }

    // --- Settings Changes (Immediate Effect) ---
    function setSpeed(val) {
        playbackSpeed = val;
        document.getElementById('speedBtn075').classList.toggle('active', val === 0.75);
        document.getElementById('speedBtn1').classList.toggle('active', val === 1);
        
        if (isPlaying) {
            playCurrentItem(); // Restart with new speed
        }
    }

    function toggleWordByWord() {
        isWordByWord = !isWordByWord;
        document.getElementById('wbwBtn').classList.toggle('active', isWordByWord);
        
        if (isPlaying) {
            playCurrentItem(); // Restart with new mode
        }
    }

    function toggleOrder() {
        isRandom = !isRandom;
        document.getElementById('randomBtn').classList.toggle('active', isRandom);
        // Note: Changing order mid-session is tricky. 
        // For simplicity, we just toggle the UI state here. 
        // If user restarts, it will apply.
        if(isSessionActive) {
            alert("Random order will apply next time you press Start.");
        }
    }

    // --- File / OCR Helpers ---
    document.getElementById('fileInput').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (!file) return;
        const reader = new FileReader();
        reader.onload = (e) => {
            inputEl.value = e.target.result;
            isInputVirgin = false;
        };
        reader.readAsText(file);
    });

    // Simple OCR Handler (Assuming Poe context)
    document.getElementById('cameraInput').addEventListener('change', async function(e) {
        const file = e.target.files[0];
        if (!file) return;
        
        if (window.Poe && window.Poe.sendUserMessage) {
            inputEl.value = "Extracting text...";
            toggleCurtain(true); // Show curtain as loading indicator
            
            window.Poe.registerHandler("ocr-handler", (result) => {
                if (result.responses[0].status === "complete") {
                    inputEl.value = result.responses[0].content;
                    toggleCurtain(false);
                    isInputVirgin = false;
                }
            });

            await window.Poe.sendUserMessage(
                "@Claude-Sonnet-4.5 Extract text from this image. Output only the text.",
                { attachments: [file], handler: "ocr-handler", openChat: false }
            );
        } else {
            alert("OCR not available in this environment.");
        }
    });

    // Dark Mode Check
    if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
    }

</script>
</body>
</html>
