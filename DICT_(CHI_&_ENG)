            transition: width 0.3s ease;
        }

        @media (max-width: 600px) {
            .main-controls { grid-template-columns: 1fr 1fr 1fr; }
            .ctrl-btn span { display: none; } /* Hide text on small screens */
            .ctrl-btn .icon { font-size: 1.5rem; margin: 0; }
        }
