        }
        .start-overlay-btn:hover { transform: translateY(-2px); background: #059669; }

        /* Loading Modal */
        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.6);
            display: none;
            align-items: center;
