        }
        .toggle-btn.active {
            background: var(--accent-secondary);
            color: white;
            border-color: var(--accent-secondary);
        }

        .start-overlay-btn {
            width: 100%;
            padding: 1rem;
            background: var(--accent-success);
            color: white;
            font-size: 1.2rem;
            font-weight: 700;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
            margin-top: 1rem;
